<% content_for :title do%>
  FoodLog &ndash; <%= DateTime.now.to_fs(:nice_date)%>
<% end %>
<div id="entries">
  <div class="columns mt-6 is-centered">
    <% @entries.each do |entry| %>
      <div class="column is-one-quarter">
        <div class="card">
          <header class="card-header">
            <p class="card-header-title"> <%= entry.meal_type%></p>
          </header>
          <div class="card-content">
            <div class="content">
              <p><span class="has-text-weight-bold"><%=entry.calories%></span> calories</p>
              <p><span class="has-text-weight-bold"><%=entry.protiens%></span> grams of protein</p>
              <p><span class="has-text-weight-bold"><%=entry.carbohydrates%></span> grams of carbs</p>
              <p><span class="has-text-weight-bold"><%=entry.fats%></span> grams of fat</p>
              <p class="italic">Logged <%= time_ago_in_words(entry.created_at)%> ago</p>
            </div>
          </div>
          <div class="card-footer">
            <%= link_to "Show this entry", entry, class: "card-footer-item" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
